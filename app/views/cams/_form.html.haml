= form_for @cam do |f|
  - if @cam.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cam.errors.count, "error")} prohibited this cam from being saved:"
      %ul
        - @cam.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :uri
    = f.text_field :uri
  .actions
    = f.submit 'Save'
