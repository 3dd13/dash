= form_for @cam do |f|
  - if @cam.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cam.errors.count, "error")} prohibited this cam from being saved:"
      %ul
        - @cam.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.text_field :location, :placeholder => "location", :class => "form-control"
  .form-group
    = f.text_field :latitude, :placeholder => "latitude", :class => "form-control"
  .form-group
    = f.text_field :longitude, :placeholder => "longitude", :class => "form-control"
  .form-group
    = f.text_field :uri, :placeholder => "url", :class => "form-control"
  .actions
    = f.submit 'Save', :class => "btn btn-block btn-success"
